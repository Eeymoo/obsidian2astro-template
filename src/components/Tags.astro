---
import { generateTagSlug } from "../utils";

interface Props {
  tags?: string[];
  link?: boolean;
}

const { tags, link = false } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <ul class="no-style flex gap-1 flex-wrap list-none! m-0 p-0">
      {tags.map((tag) => (
        <li>
          {link ? (
            <a
              href={`/tags/${generateTagSlug(tag)}/`}
              class="inline-block bg-primary/10 text-primary text-sm px-2 py-1 rounded hover:bg-primary/20 transition-colors dark:bg-primary/20 dark:text-primary/90"
            >
              {tag}
            </a>
          ) : (
            <span class="inline-block bg-primary/10 text-primary text-sm px-2 py-1 rounded dark:bg-primary/20 dark:text-primary/90">
              {tag}
            </span>
          )}
        </li>
      ))}
    </ul>
  )
}
