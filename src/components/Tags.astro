---
interface Props {
  tags?: string[];
}

const { tags } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <ul class="flex gap-1 flex-wrap list-none! m-0 p-0">
      {tags.map((tag) => (
        <li>
          <span class="inline-block bg-primary/10 text-primary text-sm px-2 py-1 rounded dark:bg-primary/20 dark:text-primary/90">
            {tag}
          </span>
        </li>
      ))}
    </ul>
  )
}
