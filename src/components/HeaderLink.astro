---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, 'inline-block px-2 py-4 text-gray-700 dark:text-gray-300 underline decoration-secondary hover:decoration-primary hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors rounded', { 'font-bold decoration-primary': isActive }]} {...props}>
	<slot />
</a>
