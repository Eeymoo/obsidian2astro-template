---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href = '', class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const hrefWithoutExt = String(href).replace(/\.html$/, '');
const pathnameWithoutExt = pathname.replace(/\.html$/, '');
const subpath = pathnameWithoutExt.match(/[^\/]+/g);
const isActive = hrefWithoutExt === pathnameWithoutExt || hrefWithoutExt === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, 'inline-block px-2 py-4 text-gray-700 dark:text-gray-300 underline hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors rounded', { 'font-black text-gray-900 dark:text-gray-200! decoration-primary!': isActive }]} {...props}>
	<slot />
</a>
