---
import { SITE_TITLE } from "../consts";
import DarkModeButton from "./DarkModeButton.astro";

interface Props {
  title?: string;
  showBackButton?: boolean;
  backUrl?: string;
}

const { title = SITE_TITLE, showBackButton = false, backUrl = "/m/" } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-slate-950 border-b border-slate-200 dark:border-slate-700">
  <div class="flex items-center justify-between h-14 px-4">
    <!-- 左侧：返回按钮或Logo -->
    <div class="flex items-center">
      {showBackButton ? (
        <a 
          href={backUrl}
          class="flex items-center justify-center w-8 h-8 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 19l-7-7 7-7"/>
          </svg>
        </a>
      ) : (
        <div class="flex items-center justify-center w-8 h-8">
          <div class="w-4 h-4 bg-primary rounded"></div>
        </div>
      )}
    </div>

    <!-- 中间：标题 -->
    <div class="flex-1 mx-4">
      <h1 class="text-base font-medium text-slate-900 dark:text-slate-100 text-center truncate">
        {title}
      </h1>
    </div>

    <!-- 右侧：功能按钮 -->
    <div class="flex items-center gap-2">
      <!-- 搜索按钮 -->
      <a 
        href="/m/search" 
        class="flex items-center justify-center w-8 h-8 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </a>
      
      <!-- 主题切换按钮 -->
      <DarkModeButton />
    </div>
  </div>
</header>