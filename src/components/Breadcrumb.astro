---
export interface BreadcrumbItem {
  name: string;
  url: string;
}

export interface Props {
  items: BreadcrumbItem[];
  schema?: boolean;
}

const { items, schema = true } = Astro.props;

// 生成面包屑结构化数据
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
};
---

{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema, null, 2)}></script>
)}

<nav aria-label="面包屑导航" class="breadcrumb-container">
  <ol class="breadcrumb-list flex flex-wrap items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
    {items.map((item, index) => (
      <li class="breadcrumb-item flex items-center">
        {index < items.length - 1 ? (
          <>
            <a 
              href={item.url} 
              class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              {item.name}
            </a>
            <svg class="w-4 h-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </>
        ) : (
          <span class="text-gray-900 dark:text-gray-100 font-medium">{item.name}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb-container {
    margin-bottom: 1.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  .breadcrumb-item:last-child svg {
    display: none;
  }

  @media (max-width: 640px) {
    .breadcrumb-container {
      font-size: 0.75rem;
    }
    
    .breadcrumb-list {
      gap: 0.25rem;
    }
    
    .breadcrumb-item svg {
      width: 0.75rem;
      height: 0.75rem;
      margin-left: 0.25rem;
      margin-right: 0.25rem;
    }
  }
</style>