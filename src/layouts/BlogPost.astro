---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import PostDate from "../components/PostDate.astro";
import Tags from "../components/Tags.astro";
import Categories from "../components/Categories.astro";
import FrontMatter from "../components/FrontMatter.astro";
import Tips from "../components/Tips.astro";
import "../styles/global.css";

/**
 * 从 Markdown 内容中提取纯文本描述
 */
function extractDescriptionFromMarkdown(content: string, maxLength: number = 180): string {
  if (!content) return '';
  
  // 移除 frontmatter
  let cleanContent = content.replace(/^---\n.*?\n---\n/s, '');
  
  // 移除 Markdown 语法
  cleanContent = cleanContent
    // 移除标题标记
    .replace(/^#{1,6}\s+/gm, '')
    // 移除加粗和斜体
    .replace(/\*\*(.*?)\*\*/g, '$1')
    .replace(/\*(.*?)\*/g, '$1')
    .replace(/__(.*?)__/g, '$1')
    .replace(/_(.*?)_/g, '$1')
    // 移除代码块
    .replace(/```[\s\S]*?```/g, '')
    // 移除行内代码
    .replace(/`([^`]+)`/g, '$1')
    // 移除链接，保留文本
    .replace(/\[([^\]]+)\]\([^)]+\)/g, '$1')
    // 移除图片
    .replace(/!\[([^\]]*)\]\([^)]+\)/g, '')
    // 移除引用
    .replace(/^>\s+/gm, '')
    // 移除列表标记
    .replace(/^[-*+]\s+/gm, '')
    .replace(/^\d+\.\s+/gm, '')
    // 移除表格
    .replace(/\|.*\|/g, '')
    // 移除分隔线
    .replace(/^---+$/gm, '')
    // 移除多余的空白字符
    .replace(/\n+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim();
  
  // 限制长度
  if (cleanContent.length > maxLength) {
    return cleanContent.substring(0, maxLength).trim() + '...';
  }
  
  return cleanContent;
}

type Props = Omit<CollectionEntry<"blog">["data"], "date" | "updated"> & {
  date: string;
  updated?: string;
  description?: string;
  content?: string;
};

const { title, date, updated, heroImage, tags, categories, description, content } = Astro.props;

// 计算最终描述：优先使用 frontmatter description，其次从内容提取
const finalDescription = description || extractDescriptionFromMarkdown(content || '');
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={finalDescription} />
    <script>
      // 防止闪烁：在页面加载前设置主题
      const savedTheme = localStorage.getItem("theme");
      const prefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      const isDark = savedTheme === "dark" || (!savedTheme && prefersDark);
      if (isDark) {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>

  <body>
    <Header sticky={false} />
    <main class="w-full max-w-285 mx-auto px-4 py-12">
      <article>
        <div class="hero-image w-full">
          {
            heroImage && (
              <Image
                width={1020}
                height={510}
                src={heroImage}
                alt=""
                class="block mx-auto rounded-xl"
              />
            )
          }
        </div>
        <div class="prose w-full max-w-200 mx-auto px-4 text-gray-700">
          <div class="title mb-4 py-4 text-center leading-tight">
            <h1 class="mb-2 text-lg font-bold">{title}</h1>

            <div class="flex mb-2">
              <PostDate
                date={new Date(date)}
                updated={updated ? new Date(updated) : undefined}
              />
              <Categories categories={categories} link={true} />
            </div>
            <Tags tags={tags} link={true} />
            {
              tags?.includes("AICG") && (
                <div class="mt-3">
                  <Tips type="warning">
                    本文含有 AI 生成的内容，仅供参考，请自行甄别
                  </Tips>
                </div>
              )
            }
          </div>

          <FrontMatter data={Astro.props} />

          <div class="prose">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
