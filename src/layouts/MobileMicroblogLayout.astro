  showLoadMore?: boolean;
  enablePullRefresh?: boolean;
}

const { 
  title, 
  posts, 
  showLoadMore = true, 
  enablePullRefresh = true 
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
  <head>
    <BaseHead 
      title={`${title} - Mobile`} 
      description={SITE_DESCRIPTION} 
    />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no">
  </head>
  
  <body class="mobile-microblog-body bg-white dark:bg-slate-950 text-slate-800 dark:text-slate-200">
    <!-- ç§»åŠ¨ç«¯å¤´éƒ¨ -->
    <MobileHeader title={title} />
    
    <!-- ä¸‹æ‹‰åˆ·æ–°æŒ‡ç¤ºå™¨ -->
    {enablePullRefresh && (
      <div id="pull-refresh" class="pull-refresh">
        <div class="refresh-icon">ğŸ”„</div>
        <span class="refresh-text">ä¸‹æ‹‰åˆ·æ–°</span>
      </div>
    )}
    
    <!-- ä¸»å†…å®¹åŒºåŸŸ -->
    <main class="mobile-microblog-main pt-14 pb-20">
      <div class="microblog-container">
        {posts.length === 0 ? (
          <div class="empty-state py-20 text-center">
            <div class="empty-icon text-6xl mb-4">ğŸ“±</div>
            <p class="text-slate-500 dark:text-slate-400">æš‚æ— å¾®åšå†…å®¹</p>
          </div>
        ) : (
          <div class="microblog-list">
            {posts.map((post, index) => (
              <article class="microblog-post" data-post-id={post.id} data-index={index}>
                <div class="post-header">
                  <time class="post-time">
                    {new Date(post.data.pubDate).toLocaleDateString('zh-CN', {
                      month: 'short',
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    })}
                  </time>
                  {post.data.tags?.includes("AICG") && (
                    <span class="ai-tag">AI</span>
                  )}
                </div>
                
                <div class="post-content">
                  <div class="content-text">
                    <post.body />
                  </div>
                </div>
                
                <div class="post-actions">
                  <button class="action-btn share-btn" data-title={post.data.title || "åˆ†äº«å¾®åš"}>
                    <span class="icon">ğŸ“¤</span>
                    <span class="text">åˆ†äº«</span>
                  </button>
                  <button class="action-btn more-btn">
                    <span class="icon">â‹¯</span>
                  </button>
                </div>
              </article>
            ))}
          </div>
        )}
        
        <!-- åŠ è½½æ›´å¤šæŒ‡ç¤ºå™¨ -->
        {showLoadMore && (
          <div id="load-more" class="load-more">
            <button class="load-more-btn">åŠ è½½æ›´å¤š</button>
            <div class="loading-spinner hidden">â³ åŠ è½½ä¸­...</div>
          </div>
        )}
      </div>
    </main>
    
    <!-- åº•éƒ¨å¯¼èˆªæ  -->
    <nav class="mobile-nav">
      <a href="/m/microblog/" class="nav-item active">
        <span class="nav-icon">ğŸ </span>
        <span class="nav-text">é¦–é¡µ</span>
      </a>
      <a href="/m/microblog/latest" class="nav-item">
        <span class="nav-icon">â­</span>
        <span class="nav-text">æœ€æ–°</span>
      </a>
      <a href="/m/microblog/today" class="nav-item">
        <span class="nav-icon">ğŸ“…</span>
        <span class="nav-text">ä»Šæ—¥</span>
      </a>
      <a href="/m/" class="nav-item">
        <span class="nav-icon">ğŸ“</span>
        <span class="nav-text">åšå®¢</span>
      </a>
    </nav>
    
    <!-- ç§»åŠ¨ç«¯ç‰¹æœ‰è„šæœ¬ -->
    <script>
      // åŸºç¡€äº¤äº’è„šæœ¬
      document.addEventListener('DOMContentLoaded', () => {
        // åˆ†äº«æŒ‰é’®åŠŸèƒ½
        const shareButtons = document.querySelectorAll('.share-btn');
        shareButtons.forEach(btn => {
          btn.addEventListener('click', async (e) => {
            e.preventDefault();
            const title = btn.dataset.title;
            const url = window.location.href;
            
            try {
              if (navigator.share) {
                await navigator.share({
                  title,
                  url
                });
              } else {
                // é™çº§æ–¹æ¡ˆï¼šå¤åˆ¶åˆ°å‰ªè´´æ¿
                await navigator.clipboard.writeText(`${title} - ${url}`);
                showToast('é“¾æ¥å·²å¤åˆ¶åˆ°å‰ªè´´æ¿');
              }
            } catch (error) {
              console.error('åˆ†äº«å¤±è´¥:', error);
            }
          });
        });
        
        // Toastæç¤ºåŠŸèƒ½
        function showToast(message) {
          const toast = document.createElement('div');
          toast.className = 'mobile-toast';
          toast.textContent = message;
          toast.style.cssText = `
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            z-index: 9999;
            font-size: 14px;
          `;
          document.body.appendChild(toast);
          
          setTimeout(() => {
            toast.remove();
          }, 2000);
        }
      });
    </script>
  </body>
</html>

<style>
  /* ç§»åŠ¨ç«¯å¾®åšç‰¹æœ‰æ ·å¼ */
  .mobile-microblog-body {
    /* å®‰å…¨åŒºåŸŸé€‚é… */
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    
    /* ä¼˜åŒ–è§¦æ‘¸ä½“éªŒ */
    -webkit-user-select: text;
    -webkit-touch-callout: default;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }
  
  .mobile-microblog-main {
    height: 100vh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    
    /* éšè—æ»šåŠ¨æ¡ä½†ä¿æŒåŠŸèƒ½ */
    scrollbar-width: none;
    &::-webkit-scrollbar {
      display: none;
    }
  }
  
  /* ä¸‹æ‹‰åˆ·æ–°æ ·å¼ */
  .pull-refresh {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: #666;
    font-size: 14px;
    background: #f8f9fa;
    transform: translateY(-100%);
    transition: transform 0.3s ease;
    border-bottom: 1px solid #e9ecef;
  }
  
  .pull-refresh.active {
    transform: translateY(0);
  }
  
  .pull-refresh .refresh-icon {
    font-size: 18px;
    transition: transform 0.3s ease;
  }
  
  .pull-refresh.active .refresh-icon {
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* å¾®åšåˆ—è¡¨æ ·å¼ */
  .microblog-list {
    padding: 0 16px;
  }
  
  .microblog-post {
    padding: 16px 0;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s ease;
  }
  
  .microblog-post:last-child {
    border-bottom: none;
  }
  
  .microblog-post:active {
    background-color: #f8f9fa;
  }
  
  .dark .microblog-post:active {
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  .post-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
  }
  
  .post-time {
    font-size: 13px;
    color: #666;
    font-weight: 500;
  }
  
  .dark .post-time {
