---
import MobileLayout from "../../layouts/MobileLayout.astro";
import { getCollection, render } from "astro:content";
import { SITE_TITLE } from "../../consts";
import { filterContent, generatePostSlug } from "../../utils";

interface Props {
  // 无props
}

const { } = Astro.props;

// 获取最新的博客文章
const blogPosts = filterContent(await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3); // 首页只显示最新3篇

// 获取最新的微博并渲染HTML
const microblogPostsRaw = filterContent(await getCollection("blog"), 'microblog')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5); // 首页显示最新5条微博

const microblogPosts = await Promise.all(
  microblogPostsRaw.map(async (post) => ({
    ...post,
    html: await render(post),
  }))
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
};
---

<MobileLayout title={`${SITE_TITLE} - 移动端`}>

  <!-- 英雄区域 -->
  <section class="px-6 py-12">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-3xl mx-auto mb-6 shadow-xl"></div>
      <h1 class="text-3xl font-semibold text-slate-900 dark:text-slate-100 mb-4 tracking-tight">
        Eeymoo's Blog
      </h1>
      <p class="text-slate-600 dark:text-slate-400 text-lg leading-relaxed max-w-md mx-auto">
        记录技术探索与生活思考
      </p>
    </div>
    
    <!-- 快速导航 -->
    <div class="grid grid-cols-2 gap-4 max-w-xs mx-auto">
      <a href="/m/post" class="group">
        <div class="flex items-center justify-center p-6 bg-white dark:bg-slate-800 rounded-2xl shadow-sm group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-2">博客</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">技术文章</div>
          </div>
        </div>
      </a>
      <a href="/m/microblog" class="group">
        <div class="flex items-center justify-center p-6 bg-white dark:bg-slate-800 rounded-2xl shadow-sm group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-2">微博</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">动态分享</div>
          </div>
        </div>
      </a>
    </div>

    <div class="grid grid-cols-2 gap-4 max-w-xs mx-auto mt-4">
      <a href="/m/categories" class="group">
        <div class="flex items-center justify-center p-6 bg-white dark:bg-slate-800 rounded-2xl shadow-sm group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-2">分类</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">内容分类</div>
          </div>
        </div>
      </a>
      <a href="/m/tags" class="group">
        <div class="flex items-center justify-center p-6 bg-white dark:bg-slate-800 rounded-2xl shadow-sm group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-2">标签</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">内容标签</div>
          </div>
        </div>
      </a>
    </div>
  </section>

  <!-- 最新微博 -->
  <section class="px-6 py-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100">
        最新动态
      </h2>
      <a href="/m/microblog" class="text-blue-600 dark:text-blue-400 text-sm font-medium">
        查看全部
      </a>
    </div>
    
    <div class="space-y-4">
      {microblogPosts.map((post) => (
        <article class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
          <div class="flex items-start justify-between mb-3">
            <time class="text-xs text-slate-500 dark:text-slate-400 font-medium">
              {formatDate(post.data.date)}
            </time>
            {post.data.tags?.includes("AICG") && (
              <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full font-medium">
                AI
              </span>
            )}
          </div>
          
          <div class="text-sm text-slate-700 dark:text-slate-300 line-clamp-3 leading-relaxed">
            <div set:html={post.html} />
          </div>
          
          <div class="mt-3 flex items-center gap-2">
            {post.data.tags?.slice(0, 3).map((tag: string) => (
              <a 
                href={`/m/tags/${tag}`}
                class="text-xs text-slate-600 dark:text-slate-400 bg-slate-100 dark:bg-slate-700 px-3 py-1 rounded-full font-medium hover:bg-blue-600 hover:text-white transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- 最新博客 -->
  <section class="px-6 py-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100">
        技术文章
      </h2>
      <a href="/m/post" class="text-blue-600 dark:text-blue-400 text-sm font-medium">
        查看全部
      </a>
    </div>
    
    <div class="space-y-6">
      {blogPosts.map((post) => (
        <article class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
          <h3 class="text-base font-medium text-slate-900 dark:text-slate-100 mb-3">
            <a href={`/m/post/${generatePostSlug(post)}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
              {post.data.title}
            </a>
          </h3>
          
          <div class="flex items-center gap-4 text-xs text-slate-500 dark:text-slate-400 mb-3">
            <time>{formatDate(post.data.date)}</time>
            {post.data.categories && (
              <span>{Array.isArray(post.data.categories) ? post.data.categories.join(', ') : post.data.categories}</span>
            )}
          </div>
          
          {post.data.description && (
            <p class="text-sm text-slate-600 dark:text-slate-400 line-clamp-2">
              {post.data.description}
            </p>
          )}
        </article>
      ))}
    </div>
  </section>

  <!-- 其他链接 -->
  <section class="px-6 py-8">
    <div class="grid grid-cols-2 gap-4 max-w-md mx-auto">
      <a href="/m/archives" class="group">
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">归档</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">历史文章</div>
          </div>
        </div>
      </a>
      
      <a href="/m/friends" class="group">
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">友链</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">友情链接</div>
          </div>
        </div>
      </a>
      
      <a href="/m/about" class="group">
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">关于</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">了解更多</div>
          </div>
        </div>
      </a>
      
      <a href="/m/donate" class="group">
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 group-hover:shadow-lg transition-all duration-200">
          <div class="text-center">
            <div class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">支持</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">请我喝咖啡</div>
          </div>
        </div>
      </a>
    </div>
  </section>

</MobileLayout>

