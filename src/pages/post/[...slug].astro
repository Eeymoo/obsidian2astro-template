---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Tips from "../../components/Tips.astro";
import BlogPost from "../../layouts/BlogPost.astro";
import { convertMdALinksToGoto, generatePostSlug, filterContent } from "../../utils";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return filterContent(posts)
    .map((post) => ({
      params: {
        slug: generatePostSlug(post) + ".html",
      },
      props: post,
    }));
}
type Props = CollectionEntry<"blog">;

let post = Astro.props;
const { Content, headings } = await render(post);
const isTempUrl = !post.data?.uri;
---

<BlogPost
  {...post.data}
  date={post.data.date.toISOString()}
  updated={post.data.updated?.toISOString()}
  content={post.body}
  originalId={post.id}
>
  {
    isTempUrl && (
      <Tips type="warning">这是一个临时URL，可能在后续被移除或更改。</Tips>
    )
  }
  <Content />
</BlogPost>
