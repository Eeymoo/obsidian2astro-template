---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { convertMdALinksToGoto, generatePostSlug } from "../../utils";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts
    .filter((post) => !post.data.hidden)
    .map((post) => ({
      params: {
        slug: generatePostSlug(post),
      },
      props: post,
    }));
}
type Props = CollectionEntry<"blog">;

let post = Astro.props;
// console.log('Original Content:', post);
post = {
  ...post,
  body: convertMdALinksToGoto(post.body || ""),
};
// console.log('Converted Content:', post);
const { Content } = await render(post);
---

<BlogPost {...post.data}>
  <Content />
</BlogPost>
